io.on('connection', function (socketev) {
  rs232.xyz.on("cykl", function () {
    switch (disp_selection1) {
      case "mean_phase_acc_1":
        socketev.emit('disp_bar1', parseFloat(rs232.mean_force_acc).toFixed(2) + " N");
        socketev.emit('procent1', {
          data1: parseFloat(rs232.mean_force_acc).toFixed(2),
          data2: disp1_min,
          data3: disp1_max
        });
        break;
      case "mean_phase_brake_1":
        socketev.emit('disp_bar1', parseFloat(rs232.mean_force_brake).toFixed(2) + " N");
        socketev.emit('procent1', {
          data1: parseFloat(rs232.mean_force_brake).toFixed(2),
          data2: disp1_min,
          data3: disp1_max
        });
        break;
      case "mean_cycle_1":
        socketev.emit('disp_bar1', parseFloat(rs232.mean_force_cycle).toFixed(2) + " N");
        socketev.emit('procent1', {
          data1: parseFloat(rs232.mean_force_cycle).toFixed(2),
          data2: disp1_min,
          data3: disp1_max
        });
        break;
      case "time_acceleration_1":
        socketev.emit('disp_bar1', parseFloat(rs232.time_acc_phase).toFixed(2) + " ms");
        socketev.emit('procent1', {
          data1: parseFloat(rs232.time_acc_phase).toFixed(2),
          data2: disp1_min,
          data3: disp1_max
        });
        break;
      case "time_brake_1":
        socketev.emit('disp_bar1', parseFloat(rs232.time_brake_phase).toFixed(2) + " ms");
        socketev.emit('procent1', {
          data1: parseFloat(rs232.time_brake_phase).toFixed(2),
          data2: disp1_min,
          data3: disp1_max
        });
        break;
      case "time_cycle_1":
        socketev.emit('disp_bar1', parseFloat(rs232.time_cycle).toFixed(2) + " ms");
        socketev.emit('procent1', {data1: parseFloat(rs232.time_cycle).toFixed(2), data2: disp1_min, data3: disp1_max});
        break;
      case "max_spped_cycle_1":
        socketev.emit('disp_bar1', parseFloat(rs232.mean_force_acc).toFixed(2) + " m/s");
        socketev.emit('procent1', {
          data1: parseFloat(rs232.mean_force_acc).toFixed(2),
          data2: disp1_min,
          data3: disp1_max
        });
        break;
      case "#max_length_cycle_1":
        socketev.emit('disp_bar1', parseFloat(rs232.max_pos_cyc).toFixed(1) + " cm");
        socketev.emit('procent1', {
          data1: parseFloat(rs232.max_pos_cyc).toFixed(2),
          data2: disp2_min,
          data3: disp2_max
        });
        break;
      case "max_power_cycle_1":
        socketev.emit('disp_bar1', parseFloat(rs232.concetrate_pointer).toFixed(2) + " xx");
        socketev.emit('procent1', {
          data1: parseFloat(rs232.concetrate_pointer).toFixed(2),
          data2: disp1_min,
          data3: disp1_max
        });
        break;
      default:
        socketev.emit('disp_bar1', parseFloat(rs232.mean_force_acc).toFixed(2) + "d");
        socketev.emit('procent1', {
          data1: parseFloat(rs232.mean_force_acc).toFixed(2),
          data2: disp1_min,
          data3: disp1_max
        });
    }
    //display 2 select
    switch (disp_selection2) {
      case "mean_phase_acc_2":
        socketev.emit('disp_bar2', parseFloat(rs232.mean_force_acc).toFixed(2) + " N");
        socketev.emit('procent2', {
          data1: parseFloat(rs232.mean_force_acc).toFixed(2),
          data2: disp2_min,
          data3: disp2_max
        });
        break;
      case "mean_phase_brake_2":
        socketev.emit('disp_bar2', parseFloat(rs232.mean_force_brake).toFixed(2) + " N");
        socketev.emit('procent2', {
          data1: parseFloat(rs232.mean_force_brake).toFixed(2),
          data2: disp2_min,
          data3: disp2_max
        });
        break;
      case "mean_cycle_2":
        socketev.emit('disp_bar2', parseFloat(rs232.mean_force_cycle).toFixed(2) + " N");
        socketev.emit('procent2', {
          data1: parseFloat(rs232.mean_force_cycle).toFixed(2),
          data2: disp2_min,
          data3: disp2_max
        });
        break;
      case "time_acceleration_2":
        socketev.emit('disp_bar2', parseFloat(rs232.time_acc_phase).toFixed(2) + " ms");
        socketev.emit('procent2', {
          data1: parseFloat(rs232.time_acc_phase).toFixed(2),
          data2: disp2_min,
          data3: disp2_max
        });
        break;
      case "time_brake_2":
        socketev.emit('disp_bar2', parseFloat(rs232.time_brake_phase).toFixed(2) + " ms");
        socketev.emit('procent2', {
          data1: parseFloat(rs232.time_brake_phase).toFixed(2),
          data2: disp2_min,
          data3: disp2_max
        });
        break;
      case "time_cycle_2":
        socketev.emit('disp_bar2', parseFloat(rs232.time_cycle).toFixed(2) + " ms");
        socketev.emit('procent2', {data1: parseFloat(rs232.time_cycle).toFixed(2), data2: disp2_min, data3: disp2_max});
        break;
      case "max_spped_cycle_2":
        socketev.emit('disp_bar2', parseFloat(rs232.mean_force_acc).toFixed(2) + " m/s");
        socketev.emit('procent2', {
          data1: parseFloat(rs232.mean_force_acc).toFixed(2),
          data2: disp2_min,
          data3: disp2_max
        });
        break;
      case "#max_length_cycle_2":
        socketev.emit('disp_bar2', parseFloat(rs232.max_pos_cyc).toFixed(1) + " cm");
        socketev.emit('procent2', {
          data1: parseFloat(rs232.max_pos_cyc).toFixed(2),
          data2: disp2_min,
          data3: disp2_max
        });
        break;
      case "max_power_cycle_2":
        socketev.emit('disp_bar2', parseFloat(rs232.concetrate_pointer).toFixed(2) + " xx");
        socketev.emit('procent2', {
          data1: parseFloat(rs232.concetrate_pointer).toFixed(2),
          data2: disp2_min,
          data3: disp2_max
        });
        break;
      default:
        socketev.emit('disp_bar2', parseFloat(rs232.mean_force_acc).toFixed(2) + "d");
        socketev.emit('procent2', {
          data1: parseFloat(rs232.mean_force_acc).toFixed(2),
          data2: disp2_min,
          data3: disp2_max
        });
    }
  });
})